---
import { cn } from '../../lib/utils';
import Description from './description.astro';

interface Props {
  items: string[];
  type?: 'disc' | 'decimal';
}

const { items, type = 'disc' } = Astro.props;
---

<ul
  class={cn(
    'list-inside space-y-2 text-muted-foreground',
    type === 'decimal' ? 'list-decimal' : 'list-disc'
  )}
>
  {
    items.map((item) => (
      <li>
        <Description set:html={item} />
      </li>
    ))
  }
</ul>
