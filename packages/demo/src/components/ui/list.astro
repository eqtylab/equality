---
import { cn } from "@/lib/utils";
import Description from "@/components/ui/description.astro";

interface Props {
  items: string[];
  type?: "disc" | "decimal";
}

const { items, type = "disc" } = Astro.props;
---

<ul class={cn("list", type === "decimal" ? "list-decimal" : "list-disc")}>
  {
    items.map((item) => (
      <li>
        <Description set:html={item} />
      </li>
    ))
  }
</ul>
