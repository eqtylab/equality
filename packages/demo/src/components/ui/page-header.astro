---
import Description from '../../components/ui/description.astro';
import Heading from '../../components/ui/heading.astro';

const { heading, description } = Astro.props;
---

<section class="pb-4 border-b space-y-3">
  <Heading>{heading}</Heading>
  {
    description && (
      <p
        class="text-lg text-muted-foreground [&>b]:text-foreground [&>b]:font-medium max-w-4xl"
        set:html={description}
      />
    )
  }
</section>
