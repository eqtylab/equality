---
import { cn } from "@demo/lib/utils";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"section"> {
  class?: string;
  spacing?: "sm" | "md" | "lg" | "xl";
}

const { class: className, spacing = "sm", ...props } = Astro.props;

const spacingClass = (() => {
  switch (spacing) {
    case "sm":
      return "space-y-4";
    case "md":
      return "space-y-6";
    case "lg":
      return "space-y-8";
    case "xl":
      return "space-y-10";
    default:
      return "space-y-4";
  }
})();
---

<section class={cn(spacingClass, className)} {...props}>
  <slot />
</section>
