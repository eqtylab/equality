---
import { cn } from "@demo/lib/utils";

interface Props {
  href: string;
  class?: string;
  target?: "_blank" | "_self" | "_parent" | "_top";
  rel?: string;
  external?: boolean;
}

const { href, class: className, target, rel, external } = Astro.props;

const linkClasses = cn(
  "text-foreground hover:text-lilac font-medium underline underline-offset-4 transition-all",
  className,
);

const finalTarget = external ? "_blank" : target;
const finalRel = external ? "noopener noreferrer" : rel;
---

<a href={href} class={linkClasses} target={finalTarget} rel={finalRel}
  ><slot /></a
>
