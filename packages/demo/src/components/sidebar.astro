---
import NavList from "@demo/components/ui/nav-list.astro";

import { getCollection } from "astro:content";
const components = (await getCollection("components")).sort((a: any, b: any) =>
  a.data.heading.localeCompare(b.data.heading),
);

const gettingStartedLinks = [
  { text: "Home", href: "/" },
  { text: "Installation", href: "/getting-started/installation" },
  { text: "Usage", href: "/getting-started/usage" },
  { text: "Themes", href: "/getting-started/themes" },
  { text: "Customizing", href: "/getting-started/customizing" },
  {
    text: "Component Architecture",
    href: "/getting-started/component-architecture",
  },
  {
    text: "Color Tokens",
    href: "/getting-started/color-tokens",
  },
];

const componentsLinks = components.map((component: any) => ({
  text: component.data.heading,
  href: `/components/${component.id}`,
}));
---

<aside
  class="bg-background lg:sticky lg:top-0 lg:z-40 lg:h-screen lg:w-xs lg:overflow-y-auto lg:border-r lg:pt-14"
>
  <nav class="space-y-10 px-4 py-10">
    <NavList label="Getting Started" list={gettingStartedLinks} />
    <NavList label="Components" list={componentsLinks} />
  </nav>
</aside>
