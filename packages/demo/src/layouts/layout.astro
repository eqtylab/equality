---
import "@demo/styles/global.css";

import Header from "@demo/components/header.astro";
import Sidebar from "@demo/components/sidebar.astro";
import { ThemeProvider } from "@eqtylab/equality";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Equality</title>
  </head>
  <body>
    <ThemeProvider>
      <Header />

      <main class="bg-background grid grid-cols-[auto_1fr]">
        <Sidebar />
        <div class="px-8 pt-14 pb-14">
          <slot />
        </div>
      </main></ThemeProvider
    >
  </body>
</html>
