---
import "@demo/styles/global.css";

import { initializeTheme } from "@eqtylab/equality/scripts";

import Header from "@demo/components/header.astro";
import Sidebar from "@demo/components/sidebar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme" content="dark" />
    <script is:inline set:html={initializeTheme({ shouldStoreTheme: false })} />
    <title>Equality</title>
  </head>
  <body>
    <div class="base-colors">
      <Header />

      <main class="bg-background grid grid-cols-[minmax(0,auto)_minmax(0,1fr)]">
        <div class="hidden lg:block">
          <Sidebar />
        </div>
        <div class="px-8 pt-14 pb-14">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>
