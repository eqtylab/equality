---
import PageHeader from "@demo/components/ui/page-header.astro";
import PageWrapper from "@demo/components/ui/page-wrapper.astro";
import PageContentWrapper from "@demo/components/ui/page-content-wrapper.astro";
import TreeView from "@demo/components/ui/tree-view.astro";
interface Props {
  frontmatter?: {
    heading?: string;
    description?: string;
  };
}

const { frontmatter = {} } = Astro.props;
const { heading, description } = frontmatter;
---

<PageWrapper>
  <PageContentWrapper>
    {heading && <PageHeader heading={heading} description={description} />}
    <section id="markdown-content">
      <slot />
    </section>
  </PageContentWrapper>
  <TreeView />
</PageWrapper>
