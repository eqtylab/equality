---
import Code from "@/components/ui/code.astro";
import ContentWrapper from "@/components/ui/content-wrapper.astro";
import Description from "@/components/ui/description.astro";
import Heading from "@/components/ui/heading.astro";
import List from "@/components/ui/list.astro";
import PageHeader from "@/components/ui/page-header.astro";
import PageWrapper from "@/components/ui/page-wrapper.astro";
import SectionWrapper from "@/components/ui/section-wrapper.astro";
import TreeView from "@/components/ui/tree-view.astro";
import PageContentWrapper from "@/components/ui/page-content-wrapper.astro";

const themeProviderCode = `<ThemeProvider theme="dark">
  <App />
</ThemeProvider>`;

const variablesCode = `--color-primary: hsl(210 40% 98%);
--color-muted: hsl(240 4% 16%);`;
---

<PageWrapper
  ><PageContentWrapper>
    <PageHeader heading="Themes" />

    <SectionWrapper>
      <Heading as="h2" id="built-in-themes">Built-in themes</Heading>
      <ContentWrapper>
        <Description>Equality ships with two built-in themes: </Description>
        <List items={["<code>light</code>", "<code>dark</code>"]} />
        <Description
          >You can set them through the <code>theme</code> prop on the <code
            >ThemeProvider</code
          >:</Description
        >
        <Code code={themeProviderCode} />
        <Description
          >Switching themes automatically updates all Tailwind semantic tokens (<code
            >bg-primary</code
          >,
          <code>text-muted</code>, etc.) at runtime — no reloads or extra
          configuration.</Description
        >
      </ContentWrapper>
    </SectionWrapper>

    <SectionWrapper>
      <Heading as="h2" id="default-variables">Default variables</Heading>
      <ContentWrapper>
        <Description
          >Each theme includes its own palette of colors. You don’t need to
          import or configure these — they’re injected automatically by the
          provider.</Description
        >
        <Code code={variablesCode} />
        <Description
          >You can inspect the applied tokens directly in DevTools by selecting
          the root element wrapped by <code>ThemeProvider</code>.</Description
        >
      </ContentWrapper>
    </SectionWrapper>
  </PageContentWrapper>

  <TreeView
    items={[
      { label: "Built-in themes", id: "built-in-themes" },
      { label: "Default variables", id: "default-variables" },
    ]}
  />
</PageWrapper>
