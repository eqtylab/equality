{
  "source": ["../tokens/equality-tokens.json"],
  "platforms": {
    "css": {
      "transforms": ["attribute/cti", "name/kebab", "color/css"],
      "buildPath": "src/theme/generated/",
      "files": [
        {
          "destination": "light-tokens.css",
          "format": "css/light"
        },
        {
          "destination": "dark-tokens.css",
          "format": "css/dark"
        },
        {
          "destination": "global-light-tokens.css",
          "format": "css/global/light"
        },
        {
          "destination": "global-dark-tokens.css",
          "format": "css/global/dark"
        },
        {
          "destination": "tailwind-tokens.css",
          "format": "tailwind"
        },
        {
          "destination": "color-vars.css",
          "format": "css/color-vars"
        }
      ]
    }
  }
}
